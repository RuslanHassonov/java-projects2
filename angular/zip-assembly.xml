<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>be.mobyus:angular-rest:war</include>
			</includes>
			<useAllReactorProjects>true</useAllReactorProjects>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>modules/${artifactId}</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<files>
		<file>
			<source>${project.basedir}/aws/appspec.yml</source>
			<outputDirectory>/</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/aws/scripts/deploy.sh</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>
